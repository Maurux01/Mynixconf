# i3/config base con Catppuccin Mocha, autostart y atajos útiles
set $mod Mod4
set $term kitty
set $menu rofi -show drun -theme catppuccin-mocha

# Colores Catppuccin Mocha
set_from_resource $bg      color0   #1e1e2e
set_from_resource $fg      color7   #cdd6f4
set_from_resource $accent  color4   #89b4fa
set_from_resource $urgent  color1   #f38ba8
set_from_resource $inactive color8  #313244

# Bordes y gaps
for_window [class=".*"] border pixel 3
new_window pixel 3
new_float  pixel 3
gaps inner 12
gaps outer 24

# Focus y layouts
focus_follows_mouse yes
mouse_warping none
workspace_auto_back_and_forth yes

# Autostart
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id nm-applet
exec --no-startup-id copyq
exec --no-startup-id dunst
exec --no-startup-id flameshot
exec --no-startup-id $term

# Keybindings
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+c reload
bindsym $mod+Shift+s exec flameshot gui
bindsym $mod+Shift+l exec i3lock -c 1e1e2e
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Workspaces
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

# Floating rules
for_window [class="copyq"] floating enable
for_window [class="nm-applet"] floating enable
for_window [class="pavucontrol"] floating enable
for_window [class="blueman-manager"] floating enable

# Bar (puedes usar i3bar o polybar)
bar {
  status_command i3status
  colors {
    background $bg
    statusline $fg
    separator $accent
    focused_workspace  $accent $bg $fg
    inactive_workspace $inactive $bg $fg
    urgent_workspace   $urgent $bg $fg
  }
}

# Fin de ejemplo
